#!/usr/bin/env bash

for i in $(docker ps -a --format="{{.Names}}"); do
    echo "--------------------------------------------------------------------"
    DATE_A=$(date +"%Y-%m-%d")
    DATE_B=$(date +"%T")
    _DATE="${DATE_A} ${DATE_B} "
    echo "--------------------------------------------------------------------"
    echo "DATE: ${_DATE}------------------------------------------------------"
    echo "--------------------------------------------------------------------"
    /usr/local/bin/boss-log ${i}
    echo "--------------------------------------------------------------------"
    docker logs "${i}";
    echo "--------------------------------------------------------------------"
    echo ""
    echo ""
    echo "<BOSSJONESBREAK>"
done
